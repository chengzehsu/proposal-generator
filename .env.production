# Production Environment Variables
# Generated for deployment

# 資料庫設定 (使用 SQLite 進行本地部署測試)
DATABASE_URL="file:./production.db"

# JWT 設定
JWT_SECRET="your-super-secret-jwt-key-256-bits-long-production-ready"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-secret-key-256-bits-long-production"

# Gemini AI 設定 (需要真實 API Key)
GEMINI_API_KEY="YOUR_ACTUAL_GEMINI_API_KEY_HERE"

# 伺服器設定
PORT=3001
NODE_ENV=production

# 檔案上傳設定
UPLOAD_MAX_SIZE="10MB"
UPLOAD_DIR="./uploads"

# CORS 設定
FRONTEND_URL="http://localhost:5173"

# 速率限制設定
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# 日誌設定
LOG_LEVEL="info"
LOG_DIR="./logs"

# 安全設定
BCRYPT_ROUNDS=12

# API Key (可選)
API_KEY="your-api-key-for-system-integration"